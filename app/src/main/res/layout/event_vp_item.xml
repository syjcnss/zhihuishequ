<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_content_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_gravity="center_horizontal">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/event_content_pic_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_head"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/join_tv"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/red_dot"
                android:drawablePadding="4dp"
                android:background="@drawable/event_vp_item_type_bg"
                android:text="进行中"
                android:textColor="@color/white"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/people_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:drawableStart="@drawable/enroll_num"
                android:drawablePadding="4dp"
                android:text="15/50"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:paddingStart="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/event_vp_item_content_bg">
            <TextView
                android:id="@+id/event_content_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="“庆国庆、迎中秋”活动"
                android:textColor="@color/white"
                android:textSize="14sp"
                />
        </FrameLayout>

    </FrameLayout>
</android.support.v7.widget.CardView>