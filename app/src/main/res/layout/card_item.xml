<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="78dp"
    android:layout_marginEnd="15dp"
    card_view:cardCornerRadius="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_item_bg"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="20dp"
        android:paddingEnd="21dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kinsman_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/work_unit_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="字节跳动科技有限公司"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="13dp"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:layout_marginStart="2dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/birth_date_tv"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/birthday_icon"
            android:drawablePadding="10dp"
            android:text="1993.3.11"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/link_tel_tv"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/telphone_icon"
            android:drawablePadding="10dp"
            android:text="15827364789"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idcard_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/idcard_icon"
                android:drawablePadding="10dp"
                android:text="420106299303113321"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/kinsman_relationship_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="父亲"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>