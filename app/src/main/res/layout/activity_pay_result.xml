<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/title_bar_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="50dp"
            android:layout_height="match_parent" 
            android:src="@drawable/back_img"
            android:scaleType="centerInside"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="订单结果页"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/message_img"
            android:scaleType="centerInside"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/status_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:src="@drawable/pay_success_icon"
        />
    <TextView
        android:id="@+id/status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="付款成功"
        android:textColor="#ff000000"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/status_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="订单号：2256956664466"
        android:textColor="#ff000000"
        android:textSize="15sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/back_home_tv"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="#fff4f4f4"
            android:text="返回首页"
            android:textColor="@color/color_ff666666"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/check_order_tv"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:background="@color/color_37A2AC"
            android:text="我的订单"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:visibility="gone"/>
    </LinearLayout>

