<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LeaveCommentsActivity">
    <RelativeLayout
        android:id="@+id/action_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back_img"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/top_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="留言详情"
            android:textSize="22sp"
            android:textColor="@color/title_text"/>

    </RelativeLayout>
    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/action_bar_rl"
        android:background="@color/line_color"/>
    <ListView
        android:id="@+id/leave_comments_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/top_line"
        android:layout_above="@+id/sen_ll"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"/>
    <LinearLayout
        android:id="@+id/sen_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/content_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:maxHeight="130dp"
            android:minHeight="50dp"
            android:background="@color/white"
            android:hint="请输入留言内容"
            android:textColor="@color/title_text"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/send_tv"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:layout_toEndOf="@id/content_et"
            android:background="@drawable/send_comments_bg"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:text="发布留言"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>