<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PublicAreaRepairsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fault_type_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="故障类型"
                android:textSize="15sp"
                android:textColor="@color/title_text"/>
            <TextView
                android:id="@+id/fault_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请选择故障类型"
                android:background="@color/white"
                android:drawableEnd="@drawable/right_arrow"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/title_text"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/line_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="地点"
                android:textSize="15sp"
                android:textColor="@color/title_text"/>
            <EditText
                android:id="@+id/fault_place_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:background="@color/white"
                android:padding="15dp"
                android:hint="请填写地点"
                android:textSize="15sp"
                android:textColor="@color/title_text"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="报修详情"
            android:textSize="15sp"
            android:textColor="@color/title_text"/>
        <EditText
            android:id="@+id/describe_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="120dp"
            android:gravity="start"
            android:hint="请输入详细的描述，方便我们尽快处理问题"
            android:textSize="15sp"
            android:textColor="@color/title_text"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="报修图片"
            android:textSize="15sp"
            android:textColor="@color/title_text"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/pic_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_click_bg"
            android:text="提交"
            android:textSize="16sp"
            android:textColor="@color/white"/>

    </LinearLayout>

</ScrollView>