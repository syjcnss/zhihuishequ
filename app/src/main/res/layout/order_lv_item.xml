<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="30dp">
    <ImageView
        android:id="@+id/thumbnail_iv"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:src="@drawable/image_error"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/product_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/thumbnail_iv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="载入中"
        android:textColor="#ff000000"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/product_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/product_name_tv"
        android:layout_below="@id/product_name_tv"
        android:layout_marginTop="13dp"
        android:textColor="#ff000000"
        android:textSize="14sp"
        />
    <RelativeLayout
        android:id="@+id/price_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail_iv"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单金额："
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/total_tv"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/red"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_line"
        android:layout_below="@id/price_rl"
        android:layout_marginTop="30dp"/>
</RelativeLayout>