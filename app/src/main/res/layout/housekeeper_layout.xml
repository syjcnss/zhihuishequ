<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="19dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/housekeeper_cv_bg">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/housekeeper_cv"
        android:background="@color/transparent"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/housekeeper_pic_bg">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp">
                    <ImageView
                        android:id="@+id/housekeeper_pic_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_error"/>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/housekeeper_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="载入中"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    />
                <TextView
                    android:id="@+id/work_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/work_time"
                    android:drawablePadding="7dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/housekeeper_name_tv"
                    android:text="08:30 - 17:30"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/manager_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/housekeeper_name_tv"
                    android:layout_marginTop="8dp"
                    android:text="管家"
                    android:textColor="#ff666666"
                    android:textSize="14sp"
                    />
                <LinearLayout
                    android:id="@+id/layout_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/percentage_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="满意度100%"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/housekeeper_tel_tv"
                        android:layout_width="100dp"
                        android:layout_height="27dp"
                        android:gravity="center"
                        android:background="@drawable/tel_bg_yellow"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>