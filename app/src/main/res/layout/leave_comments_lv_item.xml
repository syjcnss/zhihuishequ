<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <com.ovu.lido.widgets.CircleImageView
            android:id="@+id/message_to_head_image_civ"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tx_02"/>

        <TextView
            android:id="@+id/message_to_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="20dp"
            android:background="@drawable/message_to"
            android:textColor="@color/title_text"
            android:layout_toEndOf="@id/message_to_head_image_civ"
            android:layout_marginEnd="55dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/message_from_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/message_from_head_image_civ"
            android:gravity="start"
            android:paddingRight="20dp"
            android:background="@drawable/message_from"
            android:textColor="@color/title_text"
            android:layout_marginStart="55dp"
            android:textSize="16sp"/>

        <com.ovu.lido.widgets.CircleImageView
            android:id="@id/message_from_head_image_civ"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tx_04"/>
    </RelativeLayout>
</LinearLayout>