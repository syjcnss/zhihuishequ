<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="房产信息"
        android:textColor="#ff000000"
        android:textSize="17sp"
        />
    <ImageView
        android:id="@+id/cancel_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/cancel_icon"
        android:scaleType="centerInside"
        android:layout_alignParentEnd="true"/>

    <!--标题-->
    <HorizontalScrollView
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@id/title_tv"
        android:layout_marginTop="14dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/city_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_selector2"
                android:maxWidth="73dp"
                android:layout_marginStart="15dp"
                android:text="请选择"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_selector"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/community_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_selector2"
                android:layout_marginStart="30dp"
                android:ellipsize="end"
                android:maxWidth="73dp"
                android:maxLines="1"
                android:text="请选择"
                android:textColor="@color/text_selector"
                android:textSize="15sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/building_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_selector2"
                android:maxWidth="73dp"
                android:layout_marginStart="30dp"
                android:text="请选择"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_selector"
                android:textSize="15sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/unit_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_selector2"
                android:maxWidth="73dp"
                android:layout_marginStart="30dp"
                android:text="请选择"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_selector"
                android:textSize="15sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/room_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/tab_selector2"
                android:maxWidth="73dp"
                android:layout_marginStart="30dp"
                android:text="请选择"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_selector"
                android:textSize="15sp"
                android:visibility="gone"/>
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_line"
        android:layout_below="@id/tab_layout"/>

    <ListView
        android:id="@+id/select_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_line"
        android:listSelector="@color/white"
        android:divider="@null"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>